<Application x:Class="DropIcons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DropIcons"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Light" AccentColor="#FF9280FF"/>
                <hc:Theme/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="NotoMusic">./Docs/Noto Music/NotoMusic-Regular.ttf#Noto Music</FontFamily>
            <SolidColorBrush x:Key="Primary" Color="#FF9280FF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
